<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    android:padding="32dp"
    tools:context=".Marcas.Marca">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="GRADOS"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtIdMarca"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"

            android:ems="10"
            android:hint="id"
            android:inputType="number"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBuscar"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/buscar"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:background="#158C66"

            android:onClick="Buscar"
            android:text="Buscar"
            app:backgroundTint="@color/cardview_shadow_end_color"
             />

        <EditText
            android:id="@+id/edtMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:hint="Ingrese grado"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="INGRESAR"
            android:textColor="#F4F4F4"
            app:backgroundTint="@color/purple_700" />

        <Button
            android:id="@+id/btnEditarGrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Editar"
            android:text="MODIFICAR"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/purple_700" />

        <Button
            android:id="@+id/btnEliminarGrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Eliminar"
            android:text="ELIMINAR"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/purple_700" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Lista"
            android:text="MOSTRAR"

            android:textColor="#FFFFFF"
            app:backgroundTint="@color/purple_700" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>